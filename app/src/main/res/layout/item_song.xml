<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="horizontal"
    >
  <!--TODO not getting the touch ripple need to figure out why-->
  <ImageView
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:id="@+id/img_song"
      android:layout_alignParentTop="true"
      android:layout_alignParentLeft="true"
      android:layout_marginRight="16dp"
      android:layout_marginTop="16dp"
      tools:src="#ff0"
      android:layout_alignParentStart="true"
      />
  <TextView
      android:id="@+id/txt_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
      tools:text="I kissed a girl"
      android:layout_alignBaseline="@+id/img_song"
      android:layout_marginTop="20dp"
      android:layout_toRightOf="@+id/img_song"
      android:layout_toEndOf="@+id/img_song"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/TextAppearance.AppCompat.Small"
      tools:text="Katy perry"
      fontPath="@string/rb_light"
      android:id="@+id/txt_artist"
      android:layout_below="@+id/txt_title"
      android:layout_toRightOf="@+id/img_song"
      android:layout_toEndOf="@+id/img_song"
      tools:ignore="MissingPrefix"
      />
</RelativeLayout>